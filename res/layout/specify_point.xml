<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/blue"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:layout_weight="1"
            android:background="@color/dark_blue"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/specify_point_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/no"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/gray"
            android:textSize="15sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:orientation="vertical" >

             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/specify_point_edittext"
                    android:enabled="true"
                    android:layout_width="0dp"
                    android:layout_height="60sp"
                    android:layout_weight="5"
                    android:background="@drawable/text_frame"
                    android:hint="@string/explore"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="25sp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/explore_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:visibility="visible"
                    android:background="@drawable/btn_background"
                    android:layout_marginLeft="1sp"
                    android:layout_marginRight="1sp"
                    android:text="@string/explore"
                    android:textSize="25sp"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/mike_imgbtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/gray"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mike" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@color/blue"
                    android:orientation="vertical" >

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:text="@string/gps"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                <Button
                        android:id="@+id/gps_map_button"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:minWidth="400dp"
                        android:layout_margin="2sp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_background"
                        android:text="@string/set_your_location"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:text="@string/peripheral"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                <Button
                        android:id="@+id/around_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="400dp"
                        android:layout_margin="2sp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_background"
                        android:text="@string/set_around"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:text="@string/map"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                <Button
                        android:id="@+id/set_map_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="400dp"
                        android:layout_margin="2sp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_background"
                        android:text="@string/set_map"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
            android:visibility="invisible"
            android:id="@+id/liner_keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="0sp"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="0sp"
            android:layout_marginRight="0sp"
            android:orientation="horizontal" >

        <GridView
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:numColumns="12"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:columnWidth="40dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:background="@color/black" />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/black" >

            <ListView
                    android:id="@+id/lstview_addr"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:divider="@color/white"
                    android:dividerHeight="1sp"
                    android:fadingEdge="vertical"
                    android:fadingEdgeLength="5dp"
                    android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>